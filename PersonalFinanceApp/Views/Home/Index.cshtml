@{
    ViewData["Title"] = "Welcome to Personal Finance App";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Link to Bootstrap 5 CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Add custom styles for the page -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        .hero-section {
            background: linear-gradient(135deg, #6f42c1, #007bff);
            color: white;
            padding: 100px 20px;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .hero-section p {
                font-size: 1.25rem;
                margin-bottom: 30px;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .card-deck {
            margin-top: 30px;
        }

        .feature-card {
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

            .feature-card .card-body {
                padding: 30px;
                text-align: center;
            }

                .feature-card .card-body h5 {
                    font-size: 1.5rem;
                    font-weight: 600;
                    margin-bottom: 20px;
                }

                .feature-card .card-body p {
                    font-size: 1rem;
                    color: #6c757d;
                }

            .feature-card .btn {
                margin-top: 15px;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1>Welcome to Personal Finance App</h1>
            <p>Your one-stop solution to manage accounts, track transactions, and organize projects. Take control of your financial future with ease.</p>
            <a href="/User/Login" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </section>

    <!-- Features Section -->
    <div class="container">
        <div class="row card-deck">
            <div class="col-md-4">
                <div class="feature-card card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Accounts</h5>
                        <p class="card-text">Keep track of all your accounts in one place. Add, update, and monitor your bank accounts and credit cards easily.</p>
                        <a href="/User/Login" class="btn btn-primary">Manage Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card card">
                    <div class="card-body">
                        <h5 class="card-title">Track Transactions</h5>
                        <p class="card-text">Stay on top of your spending. View all transactions, categorize them, and identify trends over time.</p>
                        <a href="/User/Login" class="btn btn-primary">View Transactions</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card card">
                    <div class="card-body">
                        <h5 class="card-title">Organize Projects</h5>
                        <p class="card-text">Manage your financial projects with ease. Track goals, budgets, and deadlines for your financial endeavors.</p>
                        <a href="/User/Login" class="btn btn-primary">Start a Project</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- More information or options can go here -->

    </div>

    <!-- Bootstrap JS & Popper (optional, for responsive features) -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>