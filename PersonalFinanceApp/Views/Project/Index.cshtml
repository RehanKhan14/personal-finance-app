@model IEnumerable<PersonalFinanceApp.Models.Project>

<h2>Projects</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Project</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>End Date</th>
            <th>Budget</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@(project.EndDate.HasValue ? project.EndDate.Value.ToShortDateString() : "No End Date")</td>
                <td>@(project.Budget.HasValue ? project.Budget.Value.ToString("C") : "No Budget")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
