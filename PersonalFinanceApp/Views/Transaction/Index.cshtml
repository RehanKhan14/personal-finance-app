@model IEnumerable<PersonalFinanceApp.Models.Transaction>

<h2>Transactions</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Transaction</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Account</th>
            <th>Category/Project</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date.ToShortDateString()</td>
                <td>@transaction.Amount.ToString("C")</td>
                <td>@transaction.Type</td>
                <td>@transaction.Account?.Name</td>
                @if(transaction.CategoryId==null)
                {
                    <td>@transaction.Project?.Name</td>
                }
                else
                {
                    
                    <td>@transaction.Category?.Name</td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
